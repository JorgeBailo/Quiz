<div class="page-header">
    <h4>
      Lista de Preguntas
    </h4>
</div>

<div class="row">
	<div class="col-lg-8">
		<form action="/quizes" method="GET">
			<div class="input-group">
				<input type="text" name="search" class="form-control" placeholder="Buscar...">
				<span class="input-group-btn">
					<button class="btn btn-default" type="submit">
						<i class="glyphicon glyphicon-search"></i>
					</button>
				</span>
			</div>
		</form>
	</div>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="panel-heading"></div>
    <% if (quizes.length > 0) { %>
      <table class="table table-striped table-condensed">
        <tbody>
          <% var i; for (i=0; i < quizes.length; i++) { %>
            <tr>
              <td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
              <td><%= temas[quizes[i].tema] %></td>
              <% if(session.user){ %>
              <td><a class="btn btn-warning" role="button" href="quizes/<%= quizes[i].id %>/edit">Editar</a></td>
              <td>
                <form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">
                  <button class="btn btn-danger" type="submit" onClick="return confirm('Comfirme que desea borrar: <%= quizes[i].pregunta %> - <%= quizes[i].respuesta %>');">Borrar</button>
                </form>
              <% } %>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    <% } else { %>
    <p> No se han encontrado preguntas </p>
    <% } %>
  </div>
</div>

<% if(session.user){ %>
<div class="row">
  <div class="col-lg-4">
    <a href="/quizes/new" class="btn btn-primary" role="button">Crear pregunta</a>
  </div>
</div>
<% } %>
